---
import Layout from '../layouts/Layout.astro'
import CheckoutWithCartProvider from '../components/produtos/CheckoutWithCart';

interface Cardholder {
  email: string;
  identification: string;
}

interface OnSubmitParams {
  token: string;
  paymentMethodId: string;
  issuerId: string;
  cardholder: Cardholder;
}
---

<Layout title="Checkout">
  <div class="w-full h-full overflow-x-hidden flex flex-col items-center justify-center bg-black">
    <div class="mt-40 mb-40 pl-8 pr-8">
      <CheckoutWithCartProvider client:load />
    </div>

    <!-- ðŸ”¹ Container obrigatÃ³rio para o Brick -->
    <div id="cardBrickContainer" class="w-full max-w-md mx-auto mt-8"></div>
